{
  "ci": {
    "collect": {
      "numberOfRuns": 1,
      "startServerCommand": "bun run start",
      "url": ["http://localhost:3000/en", "http://localhost:3000/de"]
    },
    "assert": {
      "preset": "lighthouse:recommended",
      "assertions": {
        "dom-size": [
          "warn",
          {
            "minScore": 0.9
          }
        ],
        "unused-javascript": ["off"],
        "service-worker": ["off"]
      }
    },
    "upload": {
      "target": "filesystem",
      "outputDir": "./.lighthouseci"
    }
  }
}
